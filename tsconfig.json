{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@assets/*": ["src/assets/*"],
      "@utils/*": ["src/util/*"]
    },
    "types": ["vite/client"]
  },
  "include": ["src", "integrations", "astro.config.ts", "eslint.config.js", "markdoc.config.ts", "svelte.config.js"],
  "exclude": [".astro", "dist", "minecolonies"]
}
