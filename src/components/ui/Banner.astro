---
import Container from './Container.astro';
import type { Props as RibbonProps } from './Ribbon.astro';
import Ribbon from './Ribbon.astro';

export interface Props extends RibbonProps {
  center?: boolean;
}

const { center = true, ...rest } = Astro.props;
---

<Ribbon {...rest}>
  <Container>
    <div class:list={[center ? 'text-center' : 'text-start', 'm-0', 'py-1']}>
      <slot />
    </div>
  </Container>
</Ribbon>
