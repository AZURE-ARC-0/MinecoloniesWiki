---
import Header from '@components/Header.astro';
import Container from '@components/ui/Container.astro';
import Ribbon from '@components/ui/Ribbon.astro';
import VersionSelector from '@components/version/VersionSelector.astro';
import { Icon } from 'astro-icon/components';

import MainPages from './MainPages.astro';
import Toolbar from './Toolbar.astro';
import WikiPages from './WikiPages.astro';

interface Props {
  isWiki: boolean;
}

const { isWiki } = Astro.props;
---

<Ribbon class="navbar navbar-expand-lg navbar-light" as="nav" outer>
  <Container>
    <button
      class="d-lg-none btn btn-outline-light"
      type="button"
      data-bs-toggle="offcanvas"
      data-bs-target="#mobileMenu"
    >
      <Icon name="fa6-solid:bars" />
    </button>

    <div class="navbar-collapse collapse">
      <ul class="navbar-nav">
        <MainPages />
      </ul>

      <Toolbar class="ms-auto" />
    </div>

    <div class="offcanvas offcanvas-start d-lg-none" tabindex="-1" id="mobileMenu">
      <div class="offcanvas-header d-flex justify-content-between align-items-start">
        <h5 class="offcanvas-title w-75" id="mobileMenuLabel">
          <Header isWiki={false} />
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body d-flex flex-column">
        <div class="flex-grow-1 overflow-scroll gap-1">
          <ul class="navbar-nav">
            <MainPages />
          </ul>

          {
            isWiki && (
              <>
                <hr />

                <div class="mb-3">
                  <VersionSelector />
                </div>

                <WikiPages />
              </>
            )
          }
        </div>

        <Toolbar class="flex-row gap-2" />
      </div>
    </div>
  </Container>
</Ribbon>

{
  isWiki && (
    <Ribbon class="navbar navbar-expand-lg navbar-light d-none d-lg-block" as="nav">
      <Container>
        <div class="navbar-collapse collapse">
          <WikiPages isAppbar />
          <ul class="ms-auto navbar-nav">
            <VersionSelector />
          </ul>
        </div>
      </Container>
    </Ribbon>
  )
}
